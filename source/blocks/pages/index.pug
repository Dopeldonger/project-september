    section.footer
        div.footer__wrapper
            div.footer__main
                img(src="../../img/logo-f.png" width="90px" height="90px" alt="Логотип")
                div.logo-text
                    h2.logo-title Айболит
                    p.logo-p ветеринарная клиника
                div.footer__text
                    div.column-1
                        +footer-item(link,"Политика конфиденциальности в отношении обработки персональных данных")
                    div.column-2
