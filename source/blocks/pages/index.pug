extends ../layout/layout


block header
    section.header-main
        div.header-main__logo
            img(src="../../img/logo.png" width="79px" height="62px" alt="Логотип")
        div.header-main__nav
            nav
                ul.nav__ul
                    +list-item(link,"Личный кабинет")
                    +list-item(link,"О нас")
                    +list-item(link,"Новости и акции")
                    +list-item(link,"Контакты")
                    +list-item(link,"Блог")
        div.header-main__hometown
            img(src="../../img/loc-icon.svg" width="46px" height="46px")
            button.hometown-button Волгоград
block main-wrapper
    section.main-wrapper.inner-wrapper
        block slider
            div.slider-wrapper
                section.swiper.slider__swiper
                    div.swiper-wrapper
                        +slide-item("Айболит круглосуточная ветклиника","slide1.jpg")
                        +slide-item("Комфортные оборудованные стационары","slide2.jpg")
                        +slide-item("Новейшее европейское оборудование","slide3.jpg")
                        +slide-item("Собственная современная лаборатория","slide4.jpg")
                        +slide-item("Аптека и зоомагазин по доступным ценам","slide5.jpg")
                        +slide-item("Груминг салон и косметические товары","slide6.jpg")
                    div.swiper-pagination.slider__pagination


        block content
            section.service-item-wrapper
                +service-item(link,"Терапия","26","therapy.png")
                +service-item(link,"Хирургия","26","surgery.png")
                +service-item(link,"Неврология","26","neurology.png")
                +service-item(link,"Ортопедия","26","orthopedics.png")
                +service-item(link,"Дерматология","26","dermatology.png")
                +service-item(link,"Офтальмология","26","ophthalmology.png")
                +service-item(link,"Кардиология","26","cardiology.png")
                +service-item(link,"Стоматология","26","dentistry.png")
                +service-item(link,"Репродуктология","26","reproduction.png")
                +service-item(link,"Визуальная диагностика","26","visual diagnostics.png")
                +service-item(link,"Лаборатория","26","lab.png")
                +service-item(link,"Онкология","26","oncology.png")
                +service-item(link,"Эндокринология","26","endocr.png")
                +service-item(link,"Экзотические животные","26","exotic.png")
                +service-item(link,"Аптека","26","pharmacy.png")
                +service-item(link,"Груминг","26","grooming.png")

        block about-us
            section.about-us
                div.about-us__wrapper
                    div.history
                        h2.history__title История компании
                        p.history__text История компании начинается 14 января 1999 года, когда было образовано ООО «Чижи». Идея пришла, т.к. у основателя компании Прозор Жанны Георгиевны была собака боксёр по кличке Бард…
                        button.history__button Читать далее
                            img(src="../../img/ic-arrow.svg" alt="Стрелка")
                    div.personnel
                        h3.personnel__title Наши специалисты
                        div.personnel__scroll
                            button.personnel__swap-button-left
                                img(src="../../img/ic-arrow-left.svg" alt="Стрелка" width="24px" height="20px")
                            +people(link,"people-2.png")
                            +people(link,"people-1.png")
                            +people(link,"people-2.png")
                            +people(link,"people-3.png")
                            +people(link,"people-3.png")
                            +people(link,"people-3.png")
                            button.personnel__swap-button-right
                                img(src="../../img/ic-arrow-right.svg" alt="Стрелка" width="24px" height="20px")
                        button.personnel__button Посмотреть всех
                            img(src="../../img/ic-arrow.svg" alt="Стрелка")
        block record
            section.record
                div.record__wrapper
                    div.record__content
                        p.record__number 1 150 000
                        p.record__text  питомцам мы помогли за 18 лет работы
                    img(src="../../img/image-bird.png" alt="Попугай").record__img

        block advantages
            section.advantages
                div.advantages__wrapper
                    h2.advantages__title Почему хозяева выбирают нас?
                    div.advantages__content
                        +advantage-item("Работаем круглосуточно","advantage-1.png", "Мы готовы в любое время суток принять домашних питомцев и их хозяев")
                        +advantage-item("Широкий спектр услуг","advantage-2.png","Кроме широкопрофильных докторов  в клинике развиты узкие направления в ветеринарии – офтальмология, стоматология, дерматология, травматология, ортопедия и онкология")
                        +advantage-item("Большой опыт","advantage-3.png","30 высококвалифицированных врачей нашей клиники предоставляют ветеринарную помощь уже на протяжении 18 лет!")
                        +advantage-item("Собственная лаборатория","advantage-4.png","Оборудованная профессиональным оснащением производства компании IDEXX International Inc.(США), которое позволяет получить результаты исследования прямо на приеме")
                        +advantage-item("Оснащённые стационары","advantage-5.png","Обычный и инфекционный стационар с индивидуальным подогревом каждой клетки. Для питомцев в критическом состоянии предусмотрены кислородные камеры")
                        +advantage-item("Новейшее оборудование","advantage-6.png","Помимо лабораторного оборудования и цифрового рентгена в клинике используется современный эндоскоп KARL STORZ")
                        +advantage-item("Запись на приём онлайн","advantage-6.png","Запись на приём позволяет избежать ожиданий в очереди, но если вы не можете приехать - мы выезжаем на дом!")
                        +advantage-item("Аптека и зоомагазин","advantage-8.png","Для удобства в клинике предусмотрен аптечный пункт, а также бутик с одеждой и косметическими средствами для ухода за домашними любимцами")
                        +advantage-item("Груминг-салон","advantage-9.png","Отдельный кабинет для проведения гигиенческих и косметических процедур, таких как мытьё и сушка, стрижка или тримминг, уход за ушами, глазами и когтями и многое другое")
        block app
            section.app
                div.app__wrapper
                    div.app__content
                        p.soon cкоро
                        p.app__text Удобное приложение для питомцев и их хозяев
                        a(href="").app__link
                            img(src="../../img/app-store-badge.png" alt="Аппстор" width="167px" height="49px")
                        a(href="").app__link-2
                            img(src="../../img/google-play-badge.png" alt="Гуглплей" width="189" height="73")
                    img.app__img-1(src="../../img/dog.png" alt="Собака" width="474px" height="534px")
                    img.app__img-2(src="../../img/example-mobile.png" alt="Пример мобильного приложения" width="425px" height="760px")
        block map
            section.map
                div.map__wrapper
                    div.map__text
                        h2.map__title Контакты
                        div.map__contact
                            h3.contact-title Айболит на Краснополянской
                            +contact-item("loc-icon.svg", "Дзержинский район, ул. Краснополянская, 30")
                            +contact-item("ic-phone.svg", "96 22 92")
                            +contact-item("ic-clock.svg", "Круглосуточно")
                        div.map__contact
                            h3.contact-title Айболит на Тулака
                            +contact-item("loc-icon.svg", "Советский район, ул. Карла Маркса, 7")
                            +contact-item("ic-phone.svg", "96 22 92")
                            +contact-item("ic-clock.svg", "Круглосуточно")
                    div.map__img
                        img(src="../../img/map.png" alt="Карта" width="950px" height="526px")
                        button.map__button Как добраться?
                            img(src="../../img/yandex-red.svg" alt="Иконка местоположения")
